<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Agendamento</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/simple-sidebar.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link href="~/lib/datatables/css/datatables.min.css" rel="stylesheet" />
</head>
<body>
    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="border-right bg-light" id="sidebar-wrapper">
            <div class="sidebar-heading">Logo marca</div>
            <div class="list-group list-group-flush">
                <a href="../Usuario" class="list-group-item list-group-item-action bg-light">Usuários</a>
                <a href="../Paciente" class="list-group-item list-group-item-action bg-light">Pacientes</a>
                <a href="../Medico" class="list-group-item list-group-item-action bg-light">Médicos</a>
                <a href="../Agenda" class="list-group-item list-group-item-action bg-light">Agendamento</a>
                <a href="../Cidade" class="list-group-item list-group-item-action bg-light">Cidades</a>
            </div>
        </div>


        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bgazul border-bottom">
                <button class="btn" id="menu-toggle"><i class="fa fa-bars text-light" aria-hidden="true"></i></button>

                <button class="navbar-toggler" type="button" data-toggle="collapse"
                        data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fa fa-cog text-light" aria-hidden="true"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fa fa-envelope text-light" aria-hidden="true"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="container-fluid">
                @RenderBody()
            </div>
            <footer class="container p-1 bg-light">
                <p>&copy; 2020 - AgendamentoClinico</p>
            </footer>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/datatables/js/datatables.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
