@{
    ViewData["Title"] = "Paciente";
}

@model List<Agendamento.Entidades.Paciente>;

<div class="breadcrumb m-1 bg-light" id="breadcrumbs">
    <p class="lead m-0">
        <a class="btn bgazul text-light" href="../Paciente/Cadastro" role="button">
            <i class="fa fa-edit" aria-hidden="true"></i>
            Adicionar
        </a>
    </p>
</div>
<div class="jumbotron jumbotron-fluid p-2 m-1 bg-light">
    <div class="container">
        <table id="dtBasicExample" class="table table-striped table-bordered" cellspacing="0"
               width="100%">
            <thead>
                <tr>
                    <th class="th-sm">
                        Código
                    </th>
                    <th class="th-sm">
                        Nome
                    </th>
                    <th class="th-sm">
                        Telefone
                    </th>
                    <th class="th-sm">
                        Profissão
                    </th>
                    <th class="th-sm">
                        Ação
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="align-content-center">
                        <td>@item.Codigo</td>
                        <td>@item.Nome</td>
                        <td>@item.Telefone</td>
                        <td>@item.Profissao</td>
                        <td class="text-center">
                            <a onclick="Editar(@item.Codigo)" style="cursor:pointer;">
                                <i class="fa fa-edit txtazul" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>

                }
            </tbody>
            <tfoot>
                <tr>
                    <th class="th-sm">
                        Código
                    </th>
                    <th class="th-sm">
                        Nome
                    </th>
                    <th class="th-sm">
                        Telefone
                    </th>
                    <th class="th-sm">
                        Profissão
                    </th>
                    <th class="th-sm">
                        Ação
                    </th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

<script>
    function Editar(codigo) {
        window.location = window.origin + "\\Paciente\\Cadastro\\" + codigo;
    }
</script>