@{
    @model Agendamento.Models.PacienteViewModel
}
    <form asp-controller="Paciente" asp-action="Cadastro" method="post">
        <div class="form-group d-none">
            <label for="formGroupExampleInput">Código</label>
            <input type="hidden" asp-for="Codigo" class="form-control" id="formGroupExampleInput" placeholder="Código" value="@Model.Codigo">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Nome</label>
            <input type="text" asp-for="Nome" class="form-control" id="formGroupExampleInput2" placeholder="Nome" value="@Model.Nome">
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Endereço</label>
            <input type="text" asp-for="Endereco" class="form-control" id="formGroupExampleInput2" placeholder="E-mail" value="@Model.Endereco">
            <span asp-validation-for="Endereco" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Bairro</label>
            <input type="Text" asp-for="Bairro" class="form-control" id="formGroupExampleInput2" placeholder="Bairro" value="@Model.Bairro">
            <span asp-validation-for="Bairro" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Número</label>
            <input type="text" asp-for="Numero" class="form-control" id="formGroupExampleInput2" placeholder="Número" value="@Model.Numero">
            <span asp-validation-for="Numero" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Cidade</label>
            <select asp-for="CidadeCodigo" class="form-control input-group-lg" asp-items="@Model.ListaCidade"></select>
            <span asp-validation-for="CidadeCodigo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Telefone</label>
            <input type="text" asp-for="Telefone" class="form-control" id="formGroupExampleInput2" placeholder="Telefone" value="@Model.Telefone">
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">E-mail</label>
            <input type="text" asp-for="Email" class="form-control" id="formGroupExampleInput2" placeholder="E-mail" value="@Model.Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Profissão</label>
            <input type="text" asp-for="Profissao" class="form-control" id="formGroupExampleInput2" placeholder="Profissão" value="@Model.Profissao">
            <span asp-validation-for="Profissao" class="text-danger"></span>
        </div>
        <div class="col">
            <button type="button" class="btn btn-info" onclick="Novo()">Novo</button>
            <button type="submit" class="btn btn-success">Gravar</button>
            <button type="button" class="btn btn-warning" onclick="Listagem()">Listagem</button>
            <button type="button" class="btn btn-danger" onclick="Excluir(@Model.Codigo)">Excluir</button>
        </div>
    </form>

<script>
    function Novo() {
        window.location = window.origin + "\\Paciente\\Cadastro\\";
    }

    function Listagem() {
        window.location = window.origin + "\\Paciente\\";
    }

    function Excluir(codigo) {
        window.location = window.origin + "\\Paciente\\Excluir\\" + codigo;
    }

</script>